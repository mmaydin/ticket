<form action="{{ app.url_generator.generate('save_ticket' ) }}" method="post">
    <p><label for="content">Soru: </label><textarea id="content" name="content"></textarea></p>
    <p>
        <select name="category[]" multiple>
            {% for category in categories %}
                <option value="{{ category.getId() }}">{{ category.title }}</option>
            {% endfor %}
        </select>
    </p>
    <p><input type="submit" value="Ekle"></p>
    {% if error %}
        <div class="error">{{ error }}</div>
    {% endif %}
</form>

