<form action="{{ path('login_check') }}" method="post">
    <p><label for="username">Kullanıcı Adı: </label><input id="username" type="text" name="_username" value="{{ last_username }}"></p>
    <p><label for="password">Parola: </label><input id="password" type="password" name="_password"></p>
    <p><input type="submit" value="Giriş yap"></p>
    {% if error %}
        <div class="error">{{ error }}</div>
    {% endif %}
</form>
